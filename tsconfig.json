{
    "compilerOptions": {
        "jsx": "react-jsx",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "incremental": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "lib": [
            "ESNext",
            "DOM"
        ],
        "target": "ES2017",
        "moduleResolution": "bundler",
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ]
}